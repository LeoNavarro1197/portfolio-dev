---

<Layout>
	<Header />
	<main class="p-15">
		<section class="w-full mx-auto pt-30 lg:w-[800px]">
			<img src={foto.src} alt="Leito" class="w-15 h-15 mb-4 rounded-full object-cover object-center" />
			<h1 class="text-white text-5xl font-bold flex flex-row items-center gap-x-4 pb-4">Â¡Hola! Soy Leito 
				<div class="flex justify-center items-center"><Badge>Programador</Badge></div>
			</h1>
			<h2 class="text-white text-xl opacity-80">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quos. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quos.</h2>
			<nav class="flex flex-row gap-x-4 py-6">
				<Social href="https://github.com/Leito-dev">
					<Github class="size-4" />
					GitHub
				</Social>
				<Social href="https://github.com/Leito-dev">
					<Linkedin class="size-4" />
					LinkedIn
				</Social>
			</nav>
		</section>

		<section id="experiencia" class="w-full mx-auto pt-20 lg:w-[800px]">
			<h2 class="text-white text-2xl font-bold mb-6 flex flex-row items-center gap-x-2">
				<BriefCase class="w-6 h-6" />
				Experiencia
			</h2>
			<Experience />
		</section>

		<section id="proyectos" class="w-full mx-auto pt-20 lg:w-[800px]">
