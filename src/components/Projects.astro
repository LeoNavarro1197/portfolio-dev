---
import ScreenShotPage from '../assets/projects/screen-shot-page.webp';
import Tailwind from './icons/Tailwind.astro';
import Astro from './icons/_Astro.astro';
import React from './icons/React.astro';
import Social from './Social.astro';
import Github from './icons/Github.astro';
import Linkedin from './icons/Linkedin.astro';

const TAGS = {
    TAILWIND: {
        name: 'Tailwind',
        icon: Tailwind
    },
    REACT: {
        name: 'React',
        icon: React
    },
    ASTRO: {
        name: 'Astro',
        icon: React
    },
}

const PROJECTS = [
    {
        title: 'project 1',
        description: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quos. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam',
        link: 'https://flowbite.com/docs/components/badge/',
        github: 'https://github.com/Leito-dev/project-1',
        image: ScreenShotPage,
        tags: [TAGS.TAILWIND, TAGS.REACT, TAGS.ASTRO]
    },
    {
        title: 'project 2',
        description: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quos. Lorem ipsum dolor sit amet consectetur adipisicing',
        link: 'https://flowbite.com/docs/components/badge/',
        github: 'https://github.com/Leito-dev/project-1',
        image: ScreenShotPage,
        tags: [TAGS.TAILWIND, TAGS.REACT, TAGS.ASTRO]
    },
]

---

{
    PROJECTS.map(({title, description, link, github, image, tags}) => (
        <div class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0 pb-15">
            <div class="w-full md:w-1/2">
                <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                    <img class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" src={image.src} alt={title} />
                </div>
            </div>
            <div class="w-full md:w-1/2 md:max-w-lg">
                <h3 class="text-2xl font-bold text-white">{title}</h3>
                <ul class="flex flex-row gap-x-2 py-3">
                        {tags.map((tag) => (
                            <li>
                                <span class="flex flex-row text-xs items-center justify-center gap-x-2 bg-slate-900/90 border border-white/10 rounded-full px-4 py-1">
                                    <tag.icon class="size-4" />
                                    <div class="opacity-70">{tag.name}</div>
                                </span>
                            </li>
                        ))}
                    </ul>
                <div class="flex flex-wrap">
                    <p class="text-white opacity-80">{description}</p>
                </div>
                <div class="flex flex-row gap-x-2 py-3 text-sm">
                    <Social href={github}>
                        <Github class="size-4" />
                        GitHub
                    </Social>
                    <Social href={link}>
                        <Linkedin class="size-4" />
                        LinkedIn
                    </Social>
                </div>
            </div>
            
        </div>
    ))
}